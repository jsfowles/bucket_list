<div class='lists-page col-md-6 col-md-offset-3'>
	<h3>Your Bucket List name is: <%= @list.name %></h3>
	<hr class='hr-line'>
	<h3>Goal: <%= @list.description %></h3>
	<!-- <h3><%= @list.description %></h3> -->

	<br>

	<% @list.items.each do |item| %>
		<div class='item'>
			<p class='list-p'><%= link_to item.title, list_item_path(@list, item) %></p>
			<p class='complete_by'> Complete by goal: <%= display_date(item) %></p>
			<% if item.completed %>
				<p class='completed'>You completed this on <%= display_completed(item) %>!</p>
			<% else %>
				<div>
					<%= render 'items/mark_complete', item: item %>
				</div>
			<% end %>
		</div>
	<% end %>

<%= commontator_thread(@list) %>

<hr class='hr-line'>
	<div class='button-align'>
		<button class="btn btn-primary link-buttons">
			<%= link_to 'Edit this list', edit_list_path(@list) %>
		</button>
		<button class="btn btn-primary link-buttons">
			<%= link_to 'Delete this list', list_path(@list), method: :delete %>
		</button>
		<button class="btn btn-primary link-buttons">
			<%= link_to 'Add an item for this list', new_list_item_path(@list) %>
		</button>
	</div>
</div>
