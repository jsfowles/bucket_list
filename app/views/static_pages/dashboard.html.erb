<div class='login-page col-md-6 col-md-offset-3'>
	<h2 class='text-center'>Your Bucket Lists</h1>

	<div class='log-in no-right-padding'>
	<% if current_user.lists.any? %>
		<% current_user.lists.each do |list| %>
		<div class='lists-dashboard'>
			<%= link_to list.name, list_path(list) %>
		</div>
		<% end %>
	<% else %>
		<h2 class='text-center'>You don't have any lists, <%= link_to 'Add one!', new_list_path %></h2>
	<% end %>
</div>
<hr>
<button class='btn btn-default btn-lg center-block'>
	<%= link_to 'Create new Bucket List', new_list_path %>
</button>
