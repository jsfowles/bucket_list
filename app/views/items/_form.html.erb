
<div class='form col-md-6 col-md-offset-3'>
	<%= form_for [@list, @item] do |f| %>
		<div class='form-group'>
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		
		<div class='form-group'>
			<%= f.label :complete_by, 'Set a date you want to complete this by' %>
			<%= f.date_select :complete_by, class: 'form-control' %>
		</div>

		<% if @item.id %>
			<div class='form-group'>
				<%= f.check_box :completed %>
				<%= f.label :completed %>
			</div>
		<% end %>
		
		<br>

		<%= f.submit class: 'btn btn-primary' %>
	<% end %>
</div>